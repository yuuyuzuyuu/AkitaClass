<div class="town-index">
  <p class="title">市町村追加</p>
    <%= form_with model: [:admins, @town], local: true do |f| %>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td style="width: 30%"><%= f.text_field :name, placeholder: "ジャンル名" %></td>
          <td><%= f.submit "追加" %></td>
        </tr>
      </tbody>
    </table>
    <% end %>
  <hr class="line">
  <p class="title">市町村一覧</p>
    <% @towns.each do |town| %>
    <table class="table table-borderless table-hover">
      <tbody>
        <tr>
          <td style="width: 40%"><%= town.name %></td>
          <td><%= link_to '編集する', edit_admins_town_path(town) %></td>
          <td><%= link_to '削除する', admins_town_path(town), method: :delete %></td>
        </tr>
      </tbody>
    </table>
    <% end %>
    <p class="text-right"><i class="fas fa-hand-point-right"><%= link_to "トップに戻る", admins_top_path %></i></p>
</div>
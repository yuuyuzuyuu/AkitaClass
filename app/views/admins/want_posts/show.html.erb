<div class="admin-post-show">
  <p class="title">投稿一覧</p>
   <table class="table table-borderless table-hover">
      <tbody>
        <tr>
          <td style="width: 20%">タイトル</td>
          <td><%= @want_post.title %></td>
        </tr>
        <tr>
          <td>PR画像</td>
          <td><%= attachment_image_tag @want_post, :post_image, size: "400x300" %></td>
        </tr>
        <tr>
          <td>本文</td>
          <td><%= @want_post.body %></td>
        </tr>
        <tr>
          <td>募集要項</td>
          <td><%= @want_post.requirement %></td>
        </tr>
        <tr>
          <td>ホームページ</td>
          <td><%= @want_post.url %></td>
        </tr>
        <tr>
          <td>タグ</td>
          <td><%= @want_post.tag_list %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @want_post.genre.name %></td>
        </tr>
        <tr>
          <td>市町村</td>
          <td><%= @want_post.town.name %></td>
        </tr>
        <tr>
          <td>本文評価</td>
          <td><%= @want_post.score %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td>
            <% if @want_post.active_status == true %>
              募集中
            <% else %>
              募集終了
            <% end %>
          </td>
        </tr>
        <tr>
          <td>投稿者</td>
          <td><%= link_to @want_post.user.nickname, admins_member_path(@want_post.user) %></td>
        </tr>
        <tr>
          <td>投稿日時</td>
          <td><%= @want_post.created_at.strftime('%Y/%m/%d  %H:%M') %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to '削除', admins_want_post_path(@want_post), method: :delete, data: {confirm: '本当に削除しますか？'} %></td>
        </tr>
      </tbody>
    </table>
    <p class="text-right"><i class="fas fa-hand-point-right"></i><%= link_to "投稿一覧に戻る", admins_want_posts_path %></p>
</div>
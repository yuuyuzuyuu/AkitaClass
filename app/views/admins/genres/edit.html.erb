<div class="genre-index">
  <p class="title">ジャンル編集</p>
    <%= form_with model: [:admins, @genre], local:true do |f| %>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td style="width: 30%"><%= f.text_field :name, placeholder: "ジャンル名" %></td>
          <td><%= f.submit "編集" %></td>
        </tr>
      </tbody>
    </table>
    <% end %>
    <p class="text-right"><i class="fas fa-hand-point-right"></i><%= link_to "ジャンル一覧にもどる", admins_genres_path %></p>
</div>
<div class="main-post-index">
  <% help_posts.each do |help_post| %>
    <div class="post-content">
      <div class="post-image">
        <%= link_to help_post_path(help_post) do %>
          <%= attachment_image_tag help_post, :post_image, size: "350x210", fallback: "post.png" %>
          <p>
            <i class="fas fa-location-arrow"></i>
            <%= help_post.user.address %>
            â™¡<%= help_post.help_likes.count %>
          </p>
        <% end %><br>
      </div>
      <div class="post-body">
        <div class="post-title">
          <%= link_to help_post.title.truncate(44), help_post_path(help_post)  %>
        </div>
        <div class="post-user">
          <%= link_to profile_path(help_post.user) do %>
            <%= attachment_image_tag help_post.user, :profile_image, size: "30x30", fallback: "profile_image.jpg" %>
            <%= help_post.user.nickname %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
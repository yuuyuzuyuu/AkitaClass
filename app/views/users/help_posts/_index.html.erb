<div class="post-index">
  <% @help_posts.each do |help_post| %>
    <div class="post-content">
      <div class="post-image">
        <%= link_to help_post_path(help_post) do %>
          <%= attachment_image_tag help_post, :post_image, size: "300x200" %><br>
        <% end %>
      </div>
      <div class="post-body">
        <a class="post-title"><%= link_to help_post.title, help_post_path(help_post) %></a><br>
        <a class="post-user"><%= attachment_image_tag help_post.user, :profile_image, size: "50x50" %>
        <a><%= help_post.user.nickname %></a><br>
        <a><%= help_post.user.address %>
        â™¡<%= help_post.help_likes.count %></a>
      </div>
    </div>
  <% end %>
</div>
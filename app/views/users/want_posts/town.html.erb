<div class="index">
  <p class="title">秋田に、住んでほしい人へ</p>
    <% @towns.each do |town| %>
      <%= link_to town.name, want_posts_town_path(id: town) %>
    <% end %>
    
<% if @town %>
  <div class="post-index">
    <% @town.want_posts.each do |want_post| %>
      <div class="post-content">
        <div class="post-image">
          <%= link_to want_post_path(want_post), data: {"turbolinks" => false} do %>
            <%= attachment_image_tag want_post, :post_image, size: "350x210" %>
            <p>
              <i class="fas fa-location-arrow"></i>
              <%= want_post.user.address %>
              ♡<%= want_post.want_likes.count %>
            </p>
          <% end %><br>
        </div>
        <div class="post-body">
          <a class="post-title"><%= link_to want_post.title, want_post_path(want_post), data: {"turbolinks" => false}  %></a><br>
          <a class="post-user"><%= attachment_image_tag want_post.user, :profile_image, size: "30x30", fallback: "profile_image.jpg" %>
          <a><%= link_to want_post.user.nickname, profile_path(want_post.user), data: {"turbolinks" => false} %></a><br>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <%= render 'index', want_posts: @want_posts %>
<% end %>



</div>

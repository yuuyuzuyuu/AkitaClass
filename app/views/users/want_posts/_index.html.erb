<div class="post-index">
  <% user.want_posts.each do |want_post| %>
    <div class="post-content">
      <div class="post-image">
        <%= link_to want_post_path(want_post) do %>
          <%= attachment_image_tag want_post, :post_image, size: "300x200" %>
          <p><%= want_post.user.address %>
        â™¡<%= want_post.want_likes.count %></p>
        <% end %><br>
      </div>
      <div class="post-body">
        <a class="post-title"><%= link_to want_post.title, want_post_path(want_post) %></a><br>
        <a class="post-user"><%= attachment_image_tag want_post.user, :profile_image, size: "50x50" %>
        <a><%= link_to want_post.user.nickname, profile_path(want_post.user), data: {"turbolinks" => false} %></a><br>
      </div>
    </div>
  <% end %>
</div>
<div class="main-post-index">
  <% want_post_all.each do |want_post| %>
    <div class="post-content">
      <div class="post-image">
        <%= link_to want_post_path(want_post) do %>
          <%= attachment_image_tag want_post, :post_image, size: "350x210", fallback: image_url("post.png") %>
          <p>
            <i class="fas fa-location-arrow"></i>
            <%= want_post.town.name %>
            ♡<%= want_post.want_likes.count %>
          </p>
          <p2>
            <% if want_post.active_status == false %>
              募集終了
            <% end %>
          </p2>          
        <% end %>
        <br>
      </div>
      <div class="post-body">
        <div class="post-title">
          <%= link_to want_post.title.truncate(44), want_post_path(want_post)  %>
        </div>
        <div class="post-user">
          <%= link_to profile_path(want_post.user) do %>
            <%= attachment_image_tag want_post.user, :profile_image, size: "30x30", fallback: image_url("profile_image.jpg") %>
            <%= want_post.user.nickname %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
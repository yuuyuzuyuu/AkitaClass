<p class="title">会員情報編集<p>
  <%= form_with model: @user, url: members_mypage_path, local: true do |f| %>
  <table>
    <tr>
      <td>名前</td>
      <td><%= f.label :last_name, "(姓)" %> <%= f.text_field :last_name %></td>
      <td><%= f.label :first_name, "(名)" %> <%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.label :last_name_kana, "(セイ)" %> <%= f.text_field :last_name_kana %></td>
      <td><%= f.label :first_name_kana, "(メイ)" %> <%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <td><%= f.label :email, "メールアドレス" %></td>
      <td><%= f.email_field :email %></td>
    </tr>
    <tr>
      <td><%= f.label :nickname, "ニックネーム" %></td>
      <td><%= f.text_field :nickname %></td>
    </tr>
    <tr>
      <td><%= f.label :profile_image, "プロフィール画像" %></td>
      <td><%= f.attachment_field :profile_image %></td>
    </tr>
    <tr>
      <td><%= f.label :introduce, "自己紹介" %></td>
      <td><%= f.text_area :introduce %></td>
    </tr>
    <tr>
      <td><%= f.label :birth_date, "生年月日" %></td>
      <td><%= f.date_select(:birth_date, start_year: 1900, end_year: (Time.now.year), default: Date.new(1990, 1, 1)) %></td>
    </tr>
    <tr>
      <td><%= f.label :phone_number, "電話番号" %></td>
      <td><%= f.text_field :phone_number, placeholder: "000-0000-0000" %></td>
    </tr>
    <tr>
      <td><%= f.label :address, "住所（県名）" %></td>
      <td><%= f.text_field :address, placeholder: "東京都" %></td>
    </tr>
    <tr>
      <td><%= f.submit "編集内容を保存" %></td>
    </tr>
  </table>
  <% end %>
<% want_post.want_comments.each do |want_comment| %>
  <%= attachment_image_tag want_comment.user, :profile_image, size: "30x30", fallback: "profile_image.jpg" %>
  <%= link_to want_comment.user.nickname, profile_path(want_comment.user) %>
  &nbsp;&nbsp;&nbsp;&nbsp;<%= want_comment.created_at.strftime('%Y/%m/%d') %><br>
  <%= simple_format(want_comment.comment) %>
  <p class="comment-delete">
    <% if want_comment.user == current_user %>
      <%= link_to '削除', want_post_want_comment_path(want_comment.want_post, want_comment), method: :delete, data: {confirm: '本当に削除しますか？'}, remote: true %>
    <% end %>
  </p>
  <hr class="line">
<% end %>
